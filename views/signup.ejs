<%- include('partials/header'); %> 

<div class="signup-card">
    <form action="/signup" method="POST">
        <h4>Sign Up</h4>
        <input type="text" class="authInput" name="name" placeholder="Name" required="true"><br>
        <input type="email" class="authInput" name="email" placeholder="Email" required="true"><br>
        <input type="password" class="authInput" name="password" placeholder="Password" required="true"><br>
        <button type="submit" class="login-button">Sign Up</button>
       
    </form>
    <br>
    <div class="serverMessage"><%=serverMessage%></div>
</div>

<%- include('partials/footer'); %> 