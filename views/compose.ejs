<%- include('partials/header'); %> 

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="titleText">Title</label>
        <input type="text" name="titleText" id="titleText" class="form-control" autocomplete="off" required = "true">
    </div>

    <div class="form-group">
        <label for="postText">Post</label>
        <textarea name="postText" id="postText" rows="10" class="form-control" autocomplete="off" required = "true"></textarea> 
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>

</form>

